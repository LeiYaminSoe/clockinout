<!DOCTYPE html>
<html>
  <head>

    <title>ClockIn-ClockOut System</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <%= favicon_link_tag asset_path('favicon.jpg') %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'custom' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Wrapper-->
    <div id="wrapper" class="<%= params[:controller] %>.<%= params[:action] %>">

      <!-- Page wraper -->
      <div id="page-wrapper" class="gray-bg <%= @extra_class %>">

        <!-- Header -->
        <%= render 'layouts/header' %>
        <!-- End Header -->

        <% if current_user.present? %>
          <!-- Side Menu -->
          <div class="row">
            <div class="col-2">
              <%= render 'layouts/side_menu' %>
            </div>
            <!-- End Side Menu -->
            <!-- Main view  -->
            <div class="col-10">
              <div id="body-content" class="content">
                <%=yield %>
              </div>
            </div>
          </div>
          <!-- End Main view  -->
        <% else %>
          <!-- Main view  -->
          <div id="body-content" class="content">
            <%=yield %>
          </div>
          <!-- End Main view  -->
        <% end %>

        <!-- Footer -->
        <%= render 'layouts/footer' %>
        <!-- End Footer -->

      </div>
      <!-- End page wrapper-->

    </div>
    <!-- End wrapper-->
  </body>
</html>
